# TrucastAI - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# APPLICATION
# =============================================================================
DEBUG=false
ENVIRONMENT=development  # development, staging, production

# =============================================================================
# DATABASE
# =============================================================================
# SQLite for local development:
DATABASE_URL=sqlite:///./data/forecasting.db

# PostgreSQL for production (Render will set this automatically):
# DATABASE_URL=postgresql://user:password@host:5432/database

# =============================================================================
# SECURITY - MUST CHANGE IN PRODUCTION
# =============================================================================
JWT_SECRET_KEY=your-super-secret-key-change-this-in-production

# =============================================================================
# CORS - Allowed origins (JSON array format)
# =============================================================================
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# For production:
# CORS_ORIGINS=["https://yourdomain.com","https://www.yourdomain.com"]

# =============================================================================
# OAUTH REDIRECT BASE URL
# =============================================================================
OAUTH_REDIRECT_BASE_URL=http://localhost:8000

# For production:
# OAUTH_REDIRECT_BASE_URL=https://yourdomain.com

# =============================================================================
# SQUARE INTEGRATION
# =============================================================================
SQUARE_APP_ID=
SQUARE_APP_SECRET=
SQUARE_ENVIRONMENT=sandbox  # sandbox or production

# =============================================================================
# TOAST INTEGRATION
# =============================================================================
TOAST_CLIENT_ID=
TOAST_CLIENT_SECRET=
TOAST_ENVIRONMENT=sandbox

# =============================================================================
# CLOVER INTEGRATION
# =============================================================================
CLOVER_APP_ID=
CLOVER_APP_SECRET=
CLOVER_ENVIRONMENT=sandbox

# =============================================================================
# SHOPIFY INTEGRATION
# =============================================================================
SHOPIFY_API_KEY=
SHOPIFY_API_SECRET=

# =============================================================================
# OPENROUTER AI - LLM Integration
# =============================================================================
# Get your API key from https://openrouter.ai/keys
OPENROUTER_API_KEY=
OPENROUTER_SITE_URL=http://localhost:8000

# =============================================================================
# SENTRY ERROR MONITORING (Free tier: 5K errors/month)
# =============================================================================
# Get your DSN from https://sentry.io
SENTRY_DSN=

# =============================================================================
# SCHEDULER - Auto-sync configuration
# =============================================================================
SYNC_ENABLED=true
SYNC_SCHEDULE_HOUR=2  # Hour (0-23 UTC) for daily sync
